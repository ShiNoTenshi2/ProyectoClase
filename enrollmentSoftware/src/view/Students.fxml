<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: #aed6f1;" stylesheets="@../../Recursos/Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StudentsController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Registro de Estudiantes">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <effect>
            <DropShadow color="#95a5a6" radius="3" />
        </effect>
    </Label>
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" stylesheets="@../../Recursos/Style.css" text="ID" />
    <TextField fx:id="txtIdEstudiante" prefHeight="40" prefWidth="300" promptText="Ingrese el ID del Estudiante" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" styleClass="text-field" stylesheets="@../../Recursos/Style.css" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" stylesheets="@../../Recursos/Style.css" text="Nombre" />
    <TextField fx:id="txtNombreEstudiante" prefHeight="40" prefWidth="300" promptText="Ingrese el Nombre del Estudiante" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" styleClass="text-field" stylesheets="@../../Recursos/Style.css" />
    <Label style="-fx-font-size: 16; -fx-text-fill: #34495e;" stylesheets="@../../Recursos/Style.css" text="Correo Electronico" />
    <TextField fx:id="txtEmailEstudiante" prefHeight="40" prefWidth="300" promptText="Ingrese el Email del Estudiante" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-padding: 5;" styleClass="text-field" stylesheets="@../../Recursos/Style.css" />
    <Button fx:id="btnRegistrarEstudiante" onAction="#RegistrarEstudiante" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" stylesheets="@../../Recursos/Style.css" text="Registrar Estudiante">
        <effect>
            <DropShadow color="#2980b9" radius="3" />
        </effect>
    </Button>
    <Button fx:id="btnVerEstudiantes" onAction="#VerEstudiantes" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" stylesheets="@../../Recursos/Style.css" text="Mostrar Estudiantes">
        <effect>
            <DropShadow color="#27ae60" radius="3" />
        </effect>
    </Button>
	<Button fx:id="btnMenu" onAction="#GoToMenu" prefHeight="40" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" stylesheets="@../../Recursos/Style.css" text="Volver al MenÃº">	
        <effect>
            <DropShadow color="#c0392b" radius="3" />
        </effect>
    </Button>
</VBox>
